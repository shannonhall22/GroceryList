<!-- Validation failure messages -->

<% if @recipe_ingredient.errors.any? %>
  <% @recipe_ingredient.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Recipe Ingredient #<%= @recipe_ingredient.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag recipe_ingredient_url(@recipe_ingredient.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for recipe_id -->
          <div class="form-group">
            <label for="recipe_id" class="col-sm-2 control-label">
              Recipe
            </label>
            <div class="col-sm-10">
              <input type="text" id="recipe_id" name="recipe_id" placeholder="Recipe" class="form-control" value="<%= @recipe_ingredient.recipe_id %>">
            </div>
          </div>

          <!-- Label and input for ingredient_id -->
          <div class="form-group">
            <label for="ingredient_id" class="col-sm-2 control-label">
              Ingredient
            </label>
            <div class="col-sm-10">
              <input type="text" id="ingredient_id" name="ingredient_id" placeholder="Ingredient" class="form-control" value="<%= @recipe_ingredient.ingredient_id %>">
            </div>
          </div>

          <!-- Label and input for amount -->
          <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">
              Amount
            </label>
            <div class="col-sm-10">
              <input type="text" id="amount" name="amount" placeholder="Amount" class="form-control" value="<%= @recipe_ingredient.amount %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Recipe Ingredient" class="btn btn-warning">
              or
              <%= link_to "Cancel", recipe_ingredient_url(@recipe_ingredient.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
