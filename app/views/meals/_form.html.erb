<%= form_for(@meal, html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :user_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :user_id, User.all, :id, :username %>
    </div>
  </div>

  <!-- Label and input for recipe_id -->
  <div class="form-group">
    <%= f.label :recipe_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :recipe_id, Recipe.all, :id, :name %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
      or
      <a href="/meals">Cancel</a>
    </div>
  </div>
<% end %>
